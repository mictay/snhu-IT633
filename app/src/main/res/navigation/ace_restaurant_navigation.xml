<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ace_restaurant_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/categoriesListFragment"
        android:name="com.mictay.snhu.it633.acerestaurantapp.view.categories.MenuCategoryListFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_category_list">
        <action
            android:id="@+id/action_categoriesListFragment_to_itemsListFragment"
            app:destination="@id/itemsListFragment" />
        <action
            android:id="@+id/action_categoriesListFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mictay.snhu.it633.acerestaurantapp.view.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_categoriesListFragment"
            app:destination="@id/categoriesListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_itemsListFragment"
            app:destination="@id/itemsListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.mictay.snhu.it633.acerestaurantapp.view.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.mictay.snhu.it633.acerestaurantapp.view.items.ItemDetailFragment"
        android:label="Item"
        tools:layout="@layout/fragment_item_detail" >
        <action
            android:id="@+id/action_itemDetailFragment_to_itemsListFragment"
            app:destination="@id/itemsListFragment" />
        <action
            android:id="@+id/action_itemDetailFragment_to_categoriesListFragment"
            app:destination="@id/categoriesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemsListFragment"
        android:name="com.mictay.snhu.it633.acerestaurantapp.view.items.ItemsListFragment"
        android:label="Items"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_itemsListFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
    </fragment>

</navigation>